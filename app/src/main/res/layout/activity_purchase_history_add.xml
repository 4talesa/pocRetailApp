<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.totvs.retailapp.PurchaseHistoryAddActivity"
    android:orientation="vertical"
    style="@style/linearLayoutLight">

    <LinearLayout
        style="@style/headerTitle">
        <TextView android:text="@string/app_purchase_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/largeLabelLight"
            android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_weight="1">
        <ImageButton
            style="@style/productPicture"
            android:layout_gravity="center"
            android:src="@drawable/add_picture"
            android:id="@+id/imageButtonScanPurchase"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView android:text="@string/app_label_barcode_format"
            style="@style/smallLabelLight"
            android:gravity="left|center"
            android:layout_weight="1"/>
        <EditText android:text=""
            style="@style/smallLabelLight"
            android:gravity="right|center"
            android:layout_weight=".7"
            android:id="@+id/editTextPurchaseBarcodeFormat"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView android:text="@string/app_label_barcode"
            style="@style/smallLabelLight"
            android:gravity="left|center"
            android:layout_weight="1"/>
        <EditText android:text=""
            style="@style/smallLabelLight"
            android:gravity="right|center"
            android:layout_weight=".7"
            android:id="@+id/editTextPurchaseBarcode"/>
    </LinearLayout>

    <Button android:text="@string/app_purchase_add_manually"
        android:id="@+id/buttonPurchaseAddManually"
        style="@style/largeButtonDark"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:textAlignment="center" />

</LinearLayout>

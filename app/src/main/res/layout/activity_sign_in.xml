<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.totvs.retailapp.SignInActivity"
    android:orientation="vertical"
    style="@style/linearLayoutLight">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4">
        <TextView android:text="@string/app_button_SignIn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorLabelLight"
            android:textSize="@dimen/label_size_large"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView android:text="@string/app_label_email"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                style="@style/smallLabelLight"
                android:gravity="left|center"
                android:layout_weight="1"/>
            <TextView android:text="@string/app_label_user_email"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                style="@style/smallLabelLight"
                android:gravity="right|center"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView android:text="@string/app_label_password"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                style="@style/smallLabelLight"
                android:gravity="left|center"
                android:layout_weight="1"/>
            <TextView android:text="@string/app_label_user_password"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                style="@style/smallLabelLight"
                android:gravity="right|center"
                android:layout_weight="1"/>
        </LinearLayout>
        <Button
            style="@style/mediumButtonLight"
            android:layout_width="fill_parent"
            android:text="@string/app_button_SignIn"
            android:id="@+id/buttonSignInAct" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                style="@style/largeButtonFacebook"
                android:id="@+id/buttonFacebookSignIn"
                android:gravity="left|center"
                android:layout_weight="1"
                android:src="@drawable/facebook_logo" />
            <TextView android:text="@string/app_label_SignIn_with_in_with_facebook"
                android:id="@+id/labelFacebookSignIn"
                style="@style/largeButtonFacebook"
                android:gravity="right|center"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView android:text="@string/app_label_or"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/smallLabelLight"
                android:gravity="center"/>
            <Button
                style="@style/mediumButtonLight"
                android:layout_width="fill_parent"
                android:text="@string/app_button_SignUp"
                android:id="@+id/buttonOrSignUp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

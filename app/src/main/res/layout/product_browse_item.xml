<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/product_preview_thumb_width"
        android:layout_height="@dimen/product_preview_thumb_height"
        android:gravity="center"
        android:src="@drawable/product_preview"
        android:scaleType="fitCenter"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:tag="product_browse_item_thumb"/>
    <LinearLayout
        android:layout_width="@dimen/product_browse_desc_width"
        android:layout_height="@dimen/product_browse_desc_height"
        android:orientation="vertical">
        <TextView android:text="@string/app_label_product_preview_description"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="@color/colorLabelLight"
            android:textSize="@dimen/label_size_small"
            android:layout_weight="1"
            android:gravity="left"
            android:tag="product_browse_item_description"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView android:text="@string/app_label_product_preview_category"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textColor="@color/colorLabelLight_Disabled"
                android:textSize="@dimen/label_size_small"
                android:layout_weight=".6"
                android:gravity="left"
                android:tag="product_browse_item_category"/>
            <TextView android:text="@string/app_label_product_preview_unit_value"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textColor="@color/colorLabelLight_Highlight"
                android:textSize="@dimen/label_size_small"
                android:layout_weight="1"
                android:gravity="right"
                android:tag="product_browse_item_value"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
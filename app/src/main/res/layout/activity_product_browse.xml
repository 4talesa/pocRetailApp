<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.totvs.retailapp.ProductBrowseActivity"
    android:orientation="vertical"
    android:background="@color/colorBackgroundLight">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:orientation="vertical"
        android:background="@color/colorBackgroundDark">
        <TextView android:text="@string/app_label_browse_product_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="@color/colorLabelDark"
            android:textSize="@dimen/label_size_medium"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView android:text="@string/app_label_browse_product_msg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="@color/colorLabelDark"
            android:textSize="@dimen/label_size_small"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listViewProduct" />
    </LinearLayout>

</LinearLayout>

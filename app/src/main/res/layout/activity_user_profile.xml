<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.totvs.retailapp.UserProfileActivity"
    android:orientation="vertical"
    style="@style/linearLayoutLight">

    <LinearLayout
        style="@style/headerTitle">
        <TextView android:text="@string/app_label_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/largeLabelLight"
            android:gravity="center" />
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton
                style="@style/profilePicture"
                android:layout_gravity="center"
                android:src="@drawable/random_user_pic_79"
                android:id="@+id/imageButtonProfilePicture"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView android:text="@string/app_label_name"
                    style="@style/smallLabelLight"
                    android:gravity="left|center"
                    android:layout_weight="1"/>
                <EditText android:text="@string/app_label_user_name"
                    style="@style/smallLabelLight"
                    android:gravity="right|center"
                    android:layout_weight=".7"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView android:text="@string/app_label_address"
                    style="@style/smallLabelLight"
                    android:gravity="left|center"
                    android:layout_weight="1"/>
                <EditText android:text="@string/app_label_user_address"
                    style="@style/smallLabelLight"
                    android:gravity="right|center"
                    android:layout_weight=".7"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView android:text="@string/app_label_phone"
                    style="@style/smallLabelLight"
                    android:gravity="left|center"
                    android:layout_weight="1"/>
                <EditText android:text="@string/app_label_user_phone"
                    style="@style/smallLabelLight"
                    android:gravity="right|center"
                    android:layout_weight=".7"/>
            </LinearLayout>
            <LinearLayout
                style="@style/linearLayoutSplliter">
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView android:text="@string/app_label_email"
                    style="@style/smallLabelLight"
                    android:gravity="left|center"
                    android:layout_weight="1"/>
                <EditText android:text="@string/app_label_user_email"
                    style="@style/smallLabelLight"
                    android:gravity="right|center"
                    android:layout_weight=".7"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView android:text="@string/app_label_password"
                    style="@style/smallLabelLight"
                    android:gravity="left|center"
                    android:layout_weight="1"/>
                <EditText android:text="@string/app_label_user_password"
                    style="@style/smallLabelLight"
                    android:gravity="right|center"
                    android:layout_weight=".7"/>
            </LinearLayout>
            <LinearLayout
                style="@style/linearLayoutSplliter">
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    style="@style/largeButtonFacebook"
                    android:id="@+id/buttonFacebookSignUp"
                    android:gravity="left|center"
                    android:layout_weight="1"
                    android:src="@drawable/facebook_logo" />
                <TextView android:text="@string/app_label_facebook"
                    android:layout_width="fill_parent"
                    android:id="@+id/labelFacebookConnect"
                    style="@style/smallButtonLight"
                    android:gravity="left|center"
                    android:layout_weight="1"/>
                <Switch
                    style="@style/mediumButtonLight"
                    android:layout_width="fill_parent"
                    android:id="@+id/switchFacebookConnect"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

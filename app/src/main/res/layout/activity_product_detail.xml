<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.totvs.retailapp.ProductDetailActivity"
    android:orientation="vertical"
    style="@style/linearLayoutLight">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageButton
                    style="@style/arrowButton"
                    android:id="@+id/buttonProductDetailArrowLeft"
                    android:gravity="left|center"
                    android:src="@drawable/arrow_left"/>
                <ImageView
                    style="@style/productPicture"
                    android:id="@+id/imageViewProductDetail"
                    android:gravity="center"
                    android:src="@drawable/product_preview"/>
                <ImageButton
                    style="@style/arrowButton"
                    android:id="@+id/buttonProductDetailArrowRight"
                    android:gravity="right|center"
                    android:src="@drawable/arrow_right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView android:text="@string/app_label_product_preview_description"
                    android:id="@+id/labelProductDetailName"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    style="@style/mediumLabelLight"
                    android:gravity="center"
                    android:layout_weight=".9"/>
                <TextView android:text="@string/app_label_product_preview_unit"
                    android:id="@+id/labelProductDetailUnit"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    style="@style/smallLabelLight"
                    android:gravity="center"
                    android:layout_weight="1"/>
                <TextView android:text="@string/app_label_product_preview_unit_value"
                    android:id="@+id/labelProductDetailPrice"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    style="@style/mediumLabelLight"
                    android:gravity="center"
                    android:layout_weight=".9"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView android:text="@string/app_label_related_items"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                style="@style/smallLabelDisabled"
                android:gravity="center"
                android:layout_weight="1"/>
            <org.lucasr.twowayview.widget.TwoWayView
                android:id="@+id/twoWayViewRelatedProduct"
                style="@style/TwoWayViewProductHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:drawSelectorOnTop="false"
                tools:context="com.totvs.retailapp.ProductDetailActivity"
                android:layout_weight=".5"
                app:twowayview_layoutManager="GridLayoutManager"
                app:twowayview_numColumns="3"
                app:twowayview_numRows="1"/>
            <LinearLayout
                style="@style/smallButtonLight"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <Button
                        style="@style/smallButtonLight"
                        android:layout_height="fill_parent"
                        android:text="@string/app_button_minus"
                        android:id="@+id/buttonProductDetailMinus"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:inputType="number"
                        android:ems="3"
                        android:id="@+id/editTextProductDetailAmount"
                        style="@style/smallLabelLight"
                        android:text="@string/app_label_product_detail_amount"
                        android:gravity="center" />
                    <Button
                        style="@style/smallButtonLight"
                        android:layout_height="fill_parent"
                        android:text="@string/app_button_plus"
                        android:id="@+id/buttonProductDetailPlus"/>
                </LinearLayout>
                <Button
                    style="@style/largeButtonDark"
                    android:layout_height="fill_parent"
                    android:text="@string/app_button_product_add_to_cart"
                    android:textSize="@dimen/label_size_small"
                    android:id="@+id/buttonProductDetailAddToCart"
                    android:layout_marginLeft="@dimen/label_margin_small"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
